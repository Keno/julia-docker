USER buildworker
WORKDIR /src

ARG wine_version=2.0.3

RUN git clone https://github.com/wine-mirror/wine.git -b wine-${wine_version}
WORKDIR /src/wine
RUN ${L32} ./configure --without-x --without-freetype --enable-win64
RUN ${L32} make -j3

USER root
RUN ${L32} make install
WORKDIR /src
RUN rm -rf wine
